<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical" 
	android:orientation="horizontal" 
	android:id="@+id/player" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
  	xmlns:android="http://schemas.android.com/apk/res/android">
    	
    <LinearLayout android:layout_gravity="center_vertical" 
    	android:orientation="vertical"
    	android:layout_width="0.0dip" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="1.0">
    	
        <TextView android:ellipsize="marquee" 
        	android:layout_gravity="left" 
        	android:id="@+id/trackname" 
        	android:focusable="true" 
        	android:fadingEdge="horizontal" 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content" 
        	android:layout_marginBottom="-2.0dip"
        	android:marqueeRepeatLimit="marquee_forever"
		    android:scrollHorizontally="true" 
        	android:singleLine="true" 
        	android:textAppearance="?android:attr/textAppearanceMedium" />
        	
        <TextView android:ellipsize="marquee" 
        	android:layout_gravity="left" 
        	android:id="@+id/artistalbum" 
        	android:fadingEdge="horizontal" 
        	android:layout_width="fill_parent" 
        	android:layout_height="wrap_content" 
        	android:layout_marginTop="-1.0dip"
        	android:marqueeRepeatLimit="marquee_forever"
		    android:scrollHorizontally="true"
		    android:singleLine="true"   
		    android:visibility="gone"
        	android:maxLines="1" android:alpha="0.7" />
    </LinearLayout>
    <ImageButton android:id="@+id/prev" 
    	android:background="@android:color/transparent" 
    	android:padding="8.0dip" android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:src="@drawable/btn_playback_rew_holo" 
    	android:layout_weight="0.0" />
    <ImageButton android:id="@+id/playpause" 
    	android:background="@android:color/transparent" 
    	android:padding="8.0dip" android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:src="@drawable/btn_playback_pause_holo" 
    	android:layout_weight="0.0" />
    <ImageButton android:id="@+id/next" 
    	android:background="@android:color/transparent" 
    	android:padding="8.0dip" android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:src="@drawable/btn_playback_ff_holo" 
    	android:layout_weight="0.0" />
</LinearLayout>